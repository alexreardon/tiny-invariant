{
  "name": "tiny-invariant",
  "version": "1.3.1",
  "description": "A tiny invariant function",
  "author": "Alex Reardon <alexreardon@gmail.com>",
  "license": "MIT",
  "keywords": [
    "invariant",
    "error",
    "assert",
    "asserts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexreardon/tiny-invariant.git"
  },
  "bugs": {
    "url": "https://github.com/alexreardon/tiny-invariant/issues"
  },
  "main": "dist/tiny-invariant.cjs.js",
  "module": "dist/tiny-invariant.esm.js",
  "types": "dist/tiny-invariant.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/tiny-invariant.js",
      "default": {
        "types": "./dist/tiny-invariant.d.ts",
        "default": "./dist/tiny-invariant.cjs.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "/dist",
    "/src"
  ],
  "size-limit": [
    {
      "path": "dist/tiny-invariant.min.js",
      "limit": "217B"
    },
    {
      "path": "dist/tiny-invariant.js",
      "limit": "267B"
    },
    {
      "path": "dist/tiny-invariant.cjs.js",
      "limit": "171B"
    },
    {
      "path": "dist/tiny-invariant.esm.js",
      "import": "foo",
      "limit": "112B"
    }
  ],
  "scripts": {
    "test": "jest",
    "test:size": "npm run build && size-limit",
    "test:lib-consumption": "vitest --config vitest-lib-consumption.config.ts run",
    "prettier:write": "prettier --debug-check src/** test/**",
    "prettier:check": "prettier --write src/** test/**",
    "typescript:check": "tsc --noEmit src/*.ts test/*.ts",
    "validate": "npm run prettier:check && npm run typescript:check",
    "build:clean": "rimraf dist",
    "build:typescript": "tsc ./src/tiny-invariant.ts --emitDeclarationOnly --declaration --outDir ./dist",
    "build:typescript:esm": "tsc ./src/tiny-invariant.ts --emitDeclarationOnly --declaration --outDir ./dist/esm",
    "build:dist": "rollup --config rollup.config.js",
    "build": "npm run build:clean && npm run build:dist && npm run build:typescript && npm run build:typescript:esm",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.1.1",
    "@types/js-yaml": "^4.0.5",
    "@types/rollup": "^0.54.0",
    "@verdaccio/types": "^10.7.0",
    "expect-type": "^0.14.2",
    "jest": "^29.1.2",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "verdaccio": "^5.16.3",
    "vitest": "^0.25.2",
    "zx": "^7.1.1"
  }
}
